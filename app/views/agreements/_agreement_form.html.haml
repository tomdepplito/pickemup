= form_for @agreement, html: { class: 'form-horizontal', multipart: true } do |f|
  .form-group
    = f.label :company_id, class: 'col-sm-2 control-label'
    = f.text_field :company_id, class: 'form-control'
  .form-group
    = f.label :rate, class: 'col-sm-2 control-label'
    = f.text_field :rate, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :contract_type
    = f.select :contract_type, options_for_select(['contingency'], default: 'contingency')
  = hidden_field_tag :admin_id, @admin_id
  .form-group
    = f.submit
